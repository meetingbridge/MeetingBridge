<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_pastmeetup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.meetingbridge.FutureMeetupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/createPostButton"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="New Event"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/createSecretPostButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/colorPrimary"
            android:text="New Secret Meetup"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <TextView
        android:id="@+id/emptyElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Events, held in the past, will appear here!!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ListView
        android:id="@+id/postsListView"
        style="@android:style/Widget.DeviceDefault.ExpandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        android:footerDividersEnabled="true" />


</LinearLayout>
